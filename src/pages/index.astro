  <script>
    // Initialize dataLayer for tracking
    window.dataLayer = window.dataLayer || [];

    // Set minimum date to today + 1 day
    const dateInput = document.getElementById('date');
    if (dateInput) {
      const tomorrow = new Date();
      tomorrow.setDate(tomorrow.getDate() + 1);
      const minDate = tomorrow.toISOString().split('T')[0];
      dateInput.min = minDate;
    }

    // Track form start (first field focus)
    let formStarted = false;
    const formFields = document.querySelectorAll('#bookingForm input, #bookingForm select, #bookingForm textarea');
    formFields.forEach(field => {
      field.addEventListener('focus', () => {
        if (!formStarted) {
          formStarted = true;
          window.dataLayer.push({
            event: 'form_start',
            form_name: 'booking_form'
          });
        }
      });
    });

    // Track problem selection
    const problemSelect = document.getElementById('problem');
    if (problemSelect) {
      problemSelect.addEventListener('change', (e) => {
        if (e.target.value) {
          window.dataLayer.push({
            event: 'form_field_complete',
            field_name: 'problem',
            field_value: e.target.value
          });
        }
      });
    }

    // Track date selection
    const dateField = document.getElementById('date');
    if (dateField) {
      dateField.addEventListener('change', () => {
        window.dataLayer.push({
          event: 'form_field_complete',
          field_name: 'appointment_date'
        });
      });
    }

    // Track CTA button clicks
    document.querySelectorAll('a[href="#contact"]').forEach(btn => {
      btn.addEventListener('click', () => {
        window.dataLayer.push({
          event: 'book_session_click',
          click_location: btn.closest('section')?.id || 'header'
        });
      });
    });

    // Track phone clicks
    document.querySelectorAll('a[href^="tel:"]').forEach(link => {
      link.addEventListener('click', () => {
        window.dataLayer.push({
          event: 'contact_click',
          contact_type: 'phone'
        });
      });
    });

    // WhatsApp tracking handled by Interakt widget

    // Form submission handler with Razorpay
    const bookingForm = document.getElementById('bookingForm');
    if (bookingForm) {
      bookingForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const submitBtn = bookingForm.querySelector('button[type="submit"]');
        const errorDiv = document.getElementById('formError');
        
        const formData = {
          customer_name: document.getElementById('name').value,
          customer_email: document.getElementById('email').value,
          customer_phone: document.getElementById('phone').value,
          city: document.getElementById('city').value,
          problem: document.getElementById('problem').value,
          circumstances: document.getElementById('circumstances').value,
          appointment_date: document.getElementById('date').value,
          appointment_time: document.getElementById('time').value,
        };

        // Validate form
        const requiredFields = ['customer_name', 'customer_email', 'customer_phone', 'city', 'problem', 'circumstances', 'appointment_date', 'appointment_time'];
        for (const field of requiredFields) {
          if (!formData[field]) {
            errorDiv.textContent = 'Please fill in all required fields';
            errorDiv.style.display = 'block';
            return;
          }
        }

        // Validate email format
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(formData.customer_email)) {
          errorDiv.textContent = 'Please enter a valid email address';
          errorDiv.style.display = 'block';
          return;
        }

        // Validate phone (10 digits)
        const phoneClean = formData.customer_phone.replace(/\D/g, '');
        if (phoneClean.length < 10) {
          errorDiv.textContent = 'Please enter a valid phone number';
          errorDiv.style.display = 'block';
          return;
        }

        errorDiv.style.display = 'none';
        
        // Show loading state
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Processing...';
        submitBtn.disabled = true;

        // Track begin_checkout event
        window.dataLayer.push({
          event: 'begin_checkout',
          ecommerce: {
            currency: 'INR',
            value: 599,
            items: [{
              item_id: 'therapy_session',
              item_name: 'Therapy Session',
              item_category: formData.problem,
              price: 599,
              quantity: 1
            }]
          }
        });

        try {
          // Create order via API
          const response = await fetch('/api/create-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
          });

          const orderData = await response.json();

          if (!response.ok) {
            throw new Error(orderData.error || 'Failed to create order');
          }

          // Track payment initiated
          window.dataLayer.push({
            event: 'payment_initiated',
            order_id: orderData.order_id,
            booking_ref: orderData.booking_ref
          });

          // Configure Razorpay options
          const razorpayOptions = {
            key: orderData.key_id,
            amount: orderData.amount,
            currency: orderData.currency,
            name: 'Psychology Zone',
            description: 'Therapy Session Booking',
            order_id: orderData.order_id,
            prefill: orderData.prefill,
            notes: {
              booking_ref: orderData.booking_ref
            },
            theme: {
              color: '#6b5ce7'
            },
            handler: async function(response) {
              // Payment successful - verify on server
              submitBtn.textContent = 'Confirming...';
              
              try {
                const verifyResponse = await fetch('/api/verify-payment', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({
                    razorpay_order_id: response.razorpay_order_id,
                    razorpay_payment_id: response.razorpay_payment_id,
                    razorpay_signature: response.razorpay_signature
                  })
                });

                const verifyData = await verifyResponse.json();

                if (!verifyResponse.ok) {
                  throw new Error(verifyData.error || 'Payment verification failed');
                }

                // Redirect to confirmation page
                window.location.href = `/booking-confirmed?ref=${verifyData.booking_ref}`;
              } catch (verifyError) {
                console.error('Verification error:', verifyError);
                errorDiv.textContent = 'Payment verification failed. Please contact support.';
                errorDiv.style.display = 'block';
                submitBtn.textContent = originalText;
                submitBtn.disabled = false;
              }
            },
            modal: {
              ondismiss: async function() {
                // User closed the payment modal
                window.dataLayer.push({
                  event: 'payment_cancelled',
                  order_id: orderData.order_id
                });

                // Mark booking as failed
                try {
                  await fetch('/api/verify-payment', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                      razorpay_order_id: orderData.order_id,
                      reason: 'Payment modal closed by user'
                    })
                  });
                } catch (e) {
                  console.error('Failed to update booking status:', e);
                }

                submitBtn.textContent = originalText;
                submitBtn.disabled = false;
              }
            }
          };

          // Open Razorpay checkout
          const razorpay = new Razorpay(razorpayOptions);
          razorpay.on('payment.failed', async function(response) {
            window.dataLayer.push({
              event: 'payment_failed',
              error_code: response.error.code,
              error_reason: response.error.reason
            });

            // Mark booking as failed
            try {
              await fetch('/api/verify-payment', {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  razorpay_order_id: orderData.order_id,
                  reason: `${response.error.code}: ${response.error.reason}`
                })
              });
            } catch (e) {
              console.error('Failed to update booking status:', e);
            }

            errorDiv.textContent = `Payment failed: ${response.error.description}`;
            errorDiv.style.display = 'block';
            submitBtn.textContent = originalText;
            submitBtn.disabled = false;
          });
          
          razorpay.open();

        } catch (error) {
          console.error('Order creation error:', error);
          errorDiv.textContent = error.message || 'Something went wrong. Please try again.';
          errorDiv.style.display = 'block';
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }
      });
    }
  </script>
