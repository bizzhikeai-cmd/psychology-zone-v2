import Layout from '../../layouts/Layout.astro';
import { getBookings, getBookingStats } from '../../lib/supabase';

// Check authentication
const adminSession = Astro.cookies.get('admin_session')?.value;
const expectedToken = import.meta.env.ADMIN_SESSION_TOKEN || process.env.ADMIN_SESSION_TOKEN;

// Simple session validation - redirect if not logged in
if (!adminSession || (expectedToken && adminSession !== expectedToken)) {
  return Astro.redirect('/admin/login');
}

// Fetch initial data
const statusFilter = Astro.url.searchParams.get('status') as 'pending' | 'completed' | 'failed' | null;
const { data: bookings } = await getBookings(statusFilter || undefined);
const { data: stats } = await getBookingStats();

// Format date for display
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-IN', {
    day: '2-digit',
    month: 'short',
    year: 'numeric'
  });
}

// Format time for display
function formatTime(timeString: string): string {
  const [hours, minutes] = timeString.split(':');
  const hour = parseInt(hours, 10);
  const ampm = hour >= 12 ? 'PM' : 'AM';
  const hour12 = hour % 12 || 12;
  return `${hour12}:${minutes} ${ampm}`;
}

// Get status badge class
function getStatusClass(status: string): string {
  switch (status) {
    case 'completed': return 'badge-success';
    case 'pending': return 'badge-warning';
    case 'failed': return 'badge-error';
    default: return '';
  }
}

// Get session status badge class
function getSessionStatusClass(status: string): string {
  switch (status) {
    case 'completed': return 'badge-success';
    case 'scheduled': return 'badge-info';
    case 'cancelled': return 'badge-error';
    case 'no-show': return 'badge-warning';
    default: return 'badge-info';
  }
}

// Check if appointment is upcoming (today or tomorrow)
function isUpcoming(appointmentDate: string): 'today' | 'tomorrow' | null {
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  
  const tomorrow = new Date(today);
  tomorrow.setDate(tomorrow.getDate() + 1);
  
  const apptDate = new Date(appointmentDate);
  apptDate.setHours(0, 0, 0, 0);
  
  if (apptDate.getTime() === today.getTime()) return 'today';
  if (apptDate.getTime() === tomorrow.getTime()) return 'tomorrow';
  return null;
}
---

<Layout title="Admin Dashboard - Psychology Zone">
  <main class="admin-page">
    <div class="admin-container">
      <!-- Header -->
      <header class="admin-header">
        <div class="header-left">
          <h1>Bookings Dashboard</h1>
          <p>Manage your therapy session bookings</p>
        </div>
        <div class="header-right">
          <button id="logoutBtn" class="btn btn-outline">Logout</button>
        </div>
      </header>

      <!-- Stats Cards -->
      {stats && (
        <div class="stats-grid">
          <div class="stat-card">
            <span class="stat-value">{stats.total}</span>
            <span class="stat-label">Total Bookings</span>
          </div>
          <div class="stat-card stat-success">
            <span class="stat-value">{stats.completed}</span>
            <span class="stat-label">Completed</span>
          </div>
          <div class="stat-card stat-warning">
            <span class="stat-value">{stats.pending}</span>
            <span class="stat-label">Pending</span>
          </div>
          <div class="stat-card stat-error">
            <span class="stat-value">{stats.failed}</span>
            <span class="stat-label">Failed</span>
          </div>
          <div class="stat-card stat-revenue">
            <span class="stat-value">‚Çπ{stats.revenue.toLocaleString('en-IN')}</span>
            <span class="stat-label">Total Revenue</span>
          </div>
        </div>
      )}

      <!-- Filters -->
      <div class="filters">
        <a href="/admin" class={`filter-btn ${!statusFilter ? 'active' : ''}`}>All</a>
        <a href="/admin?status=completed" class={`filter-btn ${statusFilter === 'completed' ? 'active' : ''}`}>Completed</a>
        <a href="/admin?status=pending" class={`filter-btn ${statusFilter === 'pending' ? 'active' : ''}`}>Pending</a>
        <a href="/admin?status=failed" class={`filter-btn ${statusFilter === 'failed' ? 'active' : ''}`}>Failed</a>
      </div>

      <!-- Bookings Table -->
      <div class="table-container">
        {bookings && bookings.length > 0 ? (
          <table class="bookings-table">
            <thead>
              <tr>
                <th>Reference</th>
                <th>Customer</th>
                <th>Phone</th>
                <th>Problem</th>
                <th>Date</th>
                <th>Time</th>
                <th>Amount</th>
                <th>Payment</th>
                <th>Session</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {bookings.map((booking) => {
                const upcomingStatus = isUpcoming(booking.appointment_date);
                const sessionStatus = booking.session_status || 'scheduled';
                return (
                  <tr class={upcomingStatus ? `upcoming-${upcomingStatus}` : ''} data-booking-id={booking.id}>
                    <td class="ref-cell">
                      {booking.booking_ref}
                      {upcomingStatus && (
                        <span class={`upcoming-badge ${upcomingStatus}`}>
                          {upcomingStatus === 'today' ? 'üîî Today' : 'üìÖ Tomorrow'}
                        </span>
                      )}
                    </td>
                    <td>
                      <div class="customer-info">
                        <span class="customer-name">{booking.customer_name}</span>
                        <span class="customer-email">{booking.customer_email}</span>
                      </div>
                    </td>
                    <td>
                      <a href={`tel:${booking.customer_phone}`} class="phone-link">
                        {booking.customer_phone}
                      </a>
                    </td>
                    <td class="problem-cell">{booking.problem}</td>
                    <td>{formatDate(booking.appointment_date)}</td>
                    <td>{formatTime(booking.appointment_time)}</td>
                    <td>‚Çπ{booking.amount_paid / 100}</td>
                    <td>
                      <span class={`badge ${getStatusClass(booking.payment_status)}`}>
                        {booking.payment_status}
                      </span>
                    </td>
                    <td>
                      <span class={`badge ${getSessionStatusClass(sessionStatus)}`}>
                        {sessionStatus}
                      </span>
                      {booking.feedback_sent && <span class="feedback-icon" title="Feedback sent">‚úì</span>}
                    </td>
                    <td>
                      {sessionStatus !== 'completed' && booking.payment_status === 'completed' ? (
                        <button 
                          class="btn btn-sm btn-complete" 
                          data-booking-id={booking.id}
                          data-booking-ref={booking.booking_ref}
                          onclick="handleCompleteSession(this)"
                        >
                          ‚úì Complete
                        </button>
                      ) : (
                        <span class="text-muted">-</span>
                      )}
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        ) : (
          <div class="empty-state">
            <p>No bookings found</p>
          </div>
        )}
      </div>
    </div>
  </main>

  <script>
    // Logout handler
    document.getElementById('logoutBtn')?.addEventListener('click', async () => {
      try {
        await fetch('/api/admin/login', { method: 'DELETE' });
        window.location.href = '/admin/login';
      } catch (error) {
        console.error('Logout error:', error);
      }
    });

    // Complete session handler
    window.handleCompleteSession = async function(button: HTMLButtonElement) {
      const bookingId = button.dataset.bookingId;
      const bookingRef = button.dataset.bookingRef;
      
      if (!bookingId) return;
      
      const confirmed = confirm(
        `Mark session ${bookingRef} as completed?\\n\\nThis will:\\n` +
        `‚úì Update session status to "completed"\\n` +
        `‚úì Send feedback request to customer in 2 hours`
      );
      
      if (!confirmed) return;
      
      // Show loading state
      const originalText = button.innerHTML;
      button.disabled = true;
      button.innerHTML = '<span class="spinner">‚è≥</span> Processing...';
      
      try {
        const response = await fetch('/api/admin/complete-session', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ booking_id: bookingId })
        });
        
        const data = await response.json();
        
        if (!response.ok) {
          throw new Error(data.error || 'Failed to complete session');
        }
        
        // Show success message
        alert('‚úì Session marked as completed!\\nFeedback request will be sent in 2 hours.');
        
        // Reload page to update UI
        window.location.reload();
      } catch (error) {
        console.error('Error completing session:', error);
        alert('Error: ' + (error instanceof Error ? error.message : 'Unknown error'));
        
        // Reset button
        button.disabled = false;
        button.innerHTML = originalText;
      }
    };
  </script>
</Layout>

<style>
