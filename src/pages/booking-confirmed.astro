import Layout from '../layouts/Layout.astro';
import { getBookingByRef, type Booking } from '../lib/supabase';

// Get booking reference from URL
const bookingRef = Astro.url.searchParams.get('ref');

let booking: Booking | null = null;
let error: string | null = null;

if (!bookingRef) {
  error = 'No booking reference provided';
} else {
  const result = await getBookingByRef(bookingRef);
  if (result.error || !result.data) {
    error = 'Booking not found';
  } else if (result.data.payment_status !== 'completed') {
    error = 'Booking payment not completed';
  } else {
    booking = result.data;
  }
}

// Format date for display
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-IN', {
    weekday: 'long',
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}

// Format time for display
function formatTime(timeString: string): string {
  try {
    const [hours, minutes] = timeString.split(':');
    const hour = parseInt(hours, 10);
    const ampm = hour >= 12 ? 'PM' : 'AM';
    const hour12 = hour % 12 || 12;
    return `${hour12}:${minutes} ${ampm}`;
  } catch {
    return timeString;
  }
}

// Generate Google Calendar URL
function generateCalendarUrl(booking: Booking): string {
  try {
    // Parse time string (HH:MM format)
    const [hours, minutes] = booking.appointment_time.split(':');
    const hour = parseInt(hours, 10);
    const minute = parseInt(minutes, 10);
    
    // Create date object with time
    const startDate = new Date(booking.appointment_date);
    startDate.setHours(hour, minute, 0, 0);
    
    const endDate = new Date(startDate.getTime() + 60 * 60 * 1000); // 1 hour session
    
    const formatForCalendar = (date: Date) => {
      return date.toISOString().replace(/-|:|\.\d\d\d/g, '');
    };
    
    const params = new URLSearchParams({
      action: 'TEMPLATE',
      text: 'Psychology Zone - Therapy Session',
      dates: `${formatForCalendar(startDate)}/${formatForCalendar(endDate)}`,
      details: `Your therapy session with Psychology Zone.\n\nBooking Reference: ${booking.booking_ref}\n\nFor any queries, call: +91 89689 00002`,
      location: 'Online Session (Link will be shared)',
    });
    
    return `https://calendar.google.com/calendar/render?${params.toString()}`;
  } catch (error) {
    console.error('Calendar URL generation failed:', error);
    return '#';
  }
}
